<%= render 'tweets/header' %>

<main>
  <div class="contents">
    <h2>少しの幸せを</h2>
    <div class="search">
      <%= form_with(url: "search_tweets_path", local: true, method: :get, class: "search-form") do |f| %>
        <%= f.text_field :keyword, placeholder: "キーワード", class: "search-input" %>
        <%= f.submit "検索", class: "search-btn" %>
      <% end %>
    </div>
    <div class="inner">
      <% @tweets.each do |tweet| %>
        <div class="content">
          <%= link_to "/tweets/#{tweet.id}", method: :get do %>
          <div class="content_post" style="background-image: url(<%= tweet.image %>);">
            <p><%= tweet.title %></p>
          </div>
          <% end %>
          <div class="content__user">
            <div class="img">
              <%= image_tag tweet.user.image_url%>
            </div>
            <span><%= tweet.user.nickname%></span>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</main>

<%= render 'tweets/footer' %>