      <li><%= link_to("Search", "#")%></li>
      <ul class="dropdwn">
        <li>Category
          <ul class="dropdwn_menu">
            <li><a href="#">風景</a></li>
            <li><a href="#">ポートレート</a></li>
            <li><a href="#">スナップ</a></li>
            <li><a href="#">ペット・生物</a></li>
            <li><a href="#">花・植物</a></li>
            <li><a href="#">自然</a></li>
            <li><a href="#">鉄道</a></li>
            <li><a href="#">車・バイク</a></li>
            <li><a href="#">食事・料理</a></li>
            <li><a href="#">水中写真</a></li>
            <li><a href="#">趣味</a></li>
            <li><a href="#">フィギュア</a></li>
            <li><a href="#">モノクローム</a></li>
            <li><a href="#">旅行</a></li>
