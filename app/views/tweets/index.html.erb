<header>
  <div class="title">
    <h1><%= link_to("A little happiness", "#")%></h1>
  </div>
  <div class="nav">
    <ul>
      <li><%= link_to("Home", "#")%></li>
      <li><%= link_to("Search", "#")%></li>
      <li><%= link_to("Category", "#")%></li>
    </ul>
  </div>
  <div class="usernav">
    <ul>
      <li>新規登録</li>
      <li>ログイン</li>
    </ul>
  </div>
</header>

<main>
  <div class="contents">
    <h2>少しの幸せを</h2>
    <div class="search">
      <%= form_with(url: "#", local: true, method: :get, class: "search-form") do |f| %>
        <%= f.text_field :keyword, placeholder: "キーワード", class: "search-input" %>
        <%= f.submit "検索", class: "search-btn" %>
      <% end %>
    </div>
    <div class="inner">
      <% @tweets.each do |tweet| %>
        <div class="content_post" style="background-image: url(<%= tweet.image %>);">
          <p><%= tweet.title %></p>
          </span>
        </div>
      <% end %>
    </div>
  </div>
</main>

<footer></footer>
