<div id="sign">
  <div class="sign_up">
    <h3>ログイン</h3>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="cp_iptxt">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "ef" %>
        <%= f.label :"メールアドレス" %>
        <span class="focus_line"></span>
      </div>

      <div class="cp_iptxt">
        <%= f.password_field :password, autocomplete: "current-password", class: "ef" %>
        <%= f.label :"パスワード" %>
        <span class="focus_line"></span>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="iptxt">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
          <span class="focus_line"></span>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "ログイン", class: "btn" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
